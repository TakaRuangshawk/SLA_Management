<style>
   
    .modal-dialog {
        max-width: 80%; 
    }

    .modal-content {
        max-height: 80vh; 
        overflow-y: auto; 
    }

    .modal-body {
        max-height: 60vh; 
        overflow-y: auto; 
    }

    #latest-table th,
#latest-table td {
    font-size: 12px;        
    padding: 4px 6px;        
    white-space: nowrap;    
    text-align: center;
}

#latest-table {
    table-layout: auto;
    width: 100%;
