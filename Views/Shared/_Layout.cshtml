<style>
    .navbar {
            padding-top: 0px;
            padding-bottom: 0px;
            border: 0;
            border-radius: 0;
            margin-bottom: 0;
            font-size: 14px;
            letter-spacing: 1px;
        background: rgb(238,168,73);
        background: linear-gradient(90deg, rgba(238,168,73,1) 0%, rgba(244,107,69,1) 100%);
    }
    .navbar a:hover, .dropdown:hover .dropbtn {
            background-color: rgba(244,107,69,1) 100%);
    }
    .nav-link{
            padding: 1rem 1rem;
    }

    .bg_home {
        background-image: url('/images/Pic_Home.png');
        background-size: 100% 100%;
        background-position: top;
        background-repeat: no-repeat;
    }
    .bg_main{
    }
    

</style>
@{
    string urlBG = "";
    if (ViewData["Title"] == "Home Page")
    {
        urlBG = "bg_home";
    }
    else
    {
        urlBG = "bg_main";
